<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffeefff3">

    <!--注册-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ff2455f1"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善信息"
            android:textSize="25sp"
            android:textColor="#FCFCFC"
            android:layout_centerInParent="true"/>

    </LinearLayout>

    <!--输入帐号密码并且登录或者注册-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <!--再次分配垂直权重 共分12份-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <!--空一份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

            <!--温馨提示 占2份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温馨提示：简爱承诺不泄露您的个人信息"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>


            </LinearLayout>

            <!--空一份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

            <!--真实姓名 占2份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/login_activity_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/realname"
                    android:hint="请输入您的真实姓名"
                    android:textSize="20sp"
                    android:background="@drawable/login_activity_edittext_shape"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <!--空一份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

            <!--生日 占2份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/login_activity_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthday"
                    android:hint="请输入您的生日"
                    android:textSize="20sp"
                    android:background="@drawable/login_activity_edittext_shape"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <!--空一份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

            <!--性别 占2份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/login_activity_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sex"
                    android:hint="请输入性别"
                    android:textSize="20sp"
                    android:background="@drawable/login_activity_edittext_shape"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <!--空一份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>


            <!--手机号 占2份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/login_activity_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    android:hint="请输入手机号"
                    android:textSize="20sp"
                    android:background="@drawable/login_activity_edittext_shape"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <!--空一份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

            <!--地址 占2份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/login_activity_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:hint="请输入地址"
                    android:textSize="20sp"
                    android:background="@drawable/login_activity_edittext_shape"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>


            <!--空一份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </LinearLayout>

            <!--注册按钮 占2份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="完成注册"
                    android:textSize="20sp"
                    android:background="#87CEFF"
                    android:id="@+id/compeleteRegister"/>
            </LinearLayout>

            <!--空6份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--版权声明-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:text="©2015-2016 vibexie.com"/>
    </LinearLayout>

</LinearLayout>

